<%- include('../partials/header.ejs') %>
	<div class="history">
		<h2>Recommendation History</h2>
		<div>
			<% if (user.histories.length > 0) { %>
				<% user.histories.forEach(function(history) { %>
					<p>
						<a href="/users/<%= user.id %>/histories/<%= history.id %>/movies">
						<%= history.createdAt.toDateString() %>
						</a>
					</p>
					<hr>
				<% }) %>
			<% } else { %>
				<h2>No histories to display</h2>
			<% } %>
		</div>
	</div>
	<div>
		<div class="profile">
				<% if (user.avatar) { %>
					<img src="<%= user.avatar %>" alt="" class="avatar-profile">
				<% } else { %>
					<img class="avatar-profile">img</i>
				<% } %>
		</div>
	</div>

<%- include('../partials/footer.ejs') %>